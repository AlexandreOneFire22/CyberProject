<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center" android:padding="32dp">

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Choisis ton compte" android:textSize="20sp" android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/btnUser1"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Compte 1"/>

    <Button
        android:id="@+id/btnUser2"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Compte 2" android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnUser3"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Compte PIRATE" android:layout_marginTop="10dp"/>
</LinearLayout>
